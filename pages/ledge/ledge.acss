.help {
  width: 700rpx;
  margin: 0 auto;
}
.help .help_item {
  margin: 10rpx auto;
  border-radius: 15rpx;
  background: #ffffff;
}
.help .help_item .title {
  display: flex;
  align-items: center;
  padding: 10rpx 0 10rpx 0;
}
.help .help_item .title .title_1 {
  width: 630rpx;
  padding-left: 20rpx;
}
.help .help_item .title .title_2 {
  width: 50rpx;
  height: 60rpx;
  text-align: center;
}
.help .help_item .title .title_2 image {
  width: 27rpx;
  height: 17rpx;
  margin: 10rpx auto;
}
.help .help_item .detail {
  white-space: pre-wrap;
  padding: 0 25rpx 0 25rpx;
  text-indent: 2em;
  border-top: 1rpx solid #E6E6E6;
  font-size: 26rpx;
  font-family: FZLanTingHeiS-R-GB;
  font-weight: 400;
  color: #333333;
}
