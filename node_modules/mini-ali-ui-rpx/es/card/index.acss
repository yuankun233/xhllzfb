.am-card{position:relative;display:flex;border-radius:16rpx;border-radius:var(--am-card-border-radius,16rpx);margin:6px 10px;align-items:center;flex-direction:column;background-color:transparent;background-size:100%;min-height:85px}.am-card-container{width:100%;display:flex;flex-direction:column;position:relative}.am-card-container-expanded{position:absolute;top:0;left:0;height:100%}.am-card-outter-container{padding-top:0}.am-card-outter-container-expanded{position:relative;width:100%;z-index:0;height:0;padding-top:60%}.am-card-body{display:flex;align-items:center;width:100%;padding:19px 24rpx;padding:19px var(--am-card-padding,24rpx);border-radius:16rpx;border-radius:var(--am-card-border-radius,16rpx);min-height:85px;box-sizing:border-box;background-color:#929292;background-repeat:no-repeat;z-index:2;position:relative;background-size:100%}.am-card-bg-mask{position:absolute;top:0;left:0;border-radius:16rpx;border-radius:var(--am-card-border-radius,16rpx);width:100%;height:100%;background:#656464;background:linear-gradient(to bottom,rgba(0,0,0,.4) 0,rgba(252,252,252,0) 60px,rgba(244,244,244,0) 100%)}.am-card-body-expand{align-items:flex-start;background-color:transparent;height:100%}.am-card-content-wrapper{display:flex;width:100%;align-items:center}.am-card-content{flex:1;min-width:100px;z-index:1}.am-card-title{font-size:36rpx;font-size:var(--am-card-title-size,36rpx);line-height:25px;color:#fff;color:var(--am-card-title-color,#fff)}.am-card-subtitle{margin-top:2px}.am-card-subtitle-text{font-size:26rpx;line-height:1.5;color:#fff;color:var(--am-card-subtitle-colo,#fff);background:#0003;border-radius:3px;padding:1px 6px}.am-card-thumb{margin-right:24rpx;margin-right:var(--am-card-padding,24rpx);width:48px;height:48px;border-radius:50vh;border-radius:var(--am-card-thumb-border-radius,50vh);border-width:4rpx;border-width:var(--am-card-thumb-border-width,4rpx);border-color:#fff;border-color:var(--am-card-thumb-border-color,#fff);border-style:solid}.am-card-arrow{width: