.am-badge{display:inline-block;position:relative;vertical-align:middle}.am-badge-text{display:flex;position:absolute;align-items:center;justify-content:center;top:0;min-width:28rpx;padding:0;height:28rpx;text-align:center;font-size:24.5rpx;background-color:#ff411c;background-color:var(--am-badge-bg-color,#ff411c);border-radius:50vh;border-radius:var(--am-badge-border-radius,50vh);color:#fff;color:var(--am-badge-font-color,#fff);z-index:1}.am-badge-text-left{right:0;transform:translate(50%,-50%)}.am-badge-text-right{left:0;transform:translate(-50%,-50%)}.am-badge-text-middle{right:50%;transform:translate(50%,-100%)}.am-badge-text-padding{font-size:20rpx;opacity:0}.am-badge-text-inner{position:relative;z-index:2;font-size:24.5rpx;white-space:nowrap}.am-badge-text-inner-absolute{position:absolute;left:50%;transform-origin:0 center;transform:scale(.75) translate3d(-50%,0,0);z-index:3}.am-badge-text-inner-opacity{transform:scale(1);zoom:.75;opacity:0}.am-badge-text.am-badge-double{padding:0 8rpx}.am-badge-not-a-wrapper .am-badge-text{position:relative;top:auto;right:auto;transform:translateX(0)}.am-badge-text.is-dot{padding:0;width:20rpx;min-width:20rpx;height:20rpx;min-height:20rpx;border-radius:50vh;border-radius:var(--am-badge-border-radius,50vh)}.am-badge-arrow{position:absolute;height:8rpx;width:8rpx;bottom:-4rpx;left:50%;margin-left:-4rpx;transform:rotate(45deg);z-index:1;border-radius:50vh 0 0;background:#ff3b30;background-color:var(--am-badge-bg-color,#ff3b30)}.am-badge-arrow.am-badge-stroke{border:0 none;filter:drop-shadow(2rpx 2rpx 0 #fff)}.am-badge-text-arrow-right{border-radius:16rpx 16rpx 0 16rpx}.am-badge-text-arrow-left{border-radius:16rpx 16rpx 16rpx 0}.am-badge-stroke{border:2rpx solid #fff}