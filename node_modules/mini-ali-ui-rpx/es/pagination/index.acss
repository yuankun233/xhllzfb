.am-pageInfinite{position:relative;width:100%;box-sizing:border-box}.am-pageInfinite_content{position:absolute;top:0;left:0;width:100%}.am-pageInfinite_content::-webkit-scrollbar{display:none}.am-pageInfiniteWrap{position:absolute;bottom:16rpx;left:0;right:0;width:100%;height:6rpx;z-index:2;pointer-events:none}.am-pageInfiniteArea{position:absolute;left:50%;width:52rpx;height:6rpx;overflow:hidden;border-radius:2rpx;transform:translateX(-50%)}.am-pageInfiniteMove{position:absolute;bottom:0;left:0;width:26rpx;height:6rpx;transition:all .1s linear;border-radius:2rpx}.am-pager{display:flex;justify-content:center}.am-pager-number{flex:0 0 6rpx;height:6rpx;overflow:hidden;margin-right:6rpx;margin-bottom:16rpx;font-size:0;line-height:0;border-radius:2rpx;background-color:#ddd}.am-pager-number_white{background-color:rgba(221,221,221,.4)}.am-pager-current{width:26rpx;height:6rpx;overflow:hidden;font-size:0;line-height:0;margin-right:6rpx;border-radius:2rpx;background-color:#1677ff}.am-pager-current_white{background-color:#fff}.am-pager-lastChild{margin-right:0}