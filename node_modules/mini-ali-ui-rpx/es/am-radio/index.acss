.am-radio{position:relative;height:36rpx;height:var(--am-radio-size,36rpx);width:36rpx;width:var(--am-radio-size,36rpx);display:inline-block;line-height:1}.am-radio-value{position:absolute;z-index:1;opacity:0}.am-radio .am-radio-synthetic{position:absolute;opacity:0;z-index:2;line-height:1;pointer-events:none;top:0;left:0;height:100%;width:100%;font-size:36rpx;font-size:var(--am-radio-size,36rpx);text-align:center;color:#1677ff;color:var(--am-radio-color,#1677ff)}.am-radio-value.a-radio-checked+.am-radio-synthetic{opacity:1}.am-radio-value.a-radio-checked.a-radio-disabled+.am-radio-synthetic{opacity:.4}